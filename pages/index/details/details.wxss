/* pages/index/details/details.wxss */
.details_view{
  text-align:center;
  width:100%;
}
.details_name{
  display:block;
  margin: 5px;
}
.details_image{
  width: 80%;
  margin:10px 0px;
}
.list{
  box-shadow:2px 2px 2px #00000045;
  padding:5px;
}
.img_item {
  width: 100%;
  display: inline-block;
  vertical-align: top;
}
.cate_view{
  margin: 10px 0px;
  width: 100%;
  height:30px;
  line-height: 30px;
  text-align: center;
  color:#fff;
  background-color: #000;
}
.fixed_view{
  position:fixed;
  bottom:0px;
  background-color:#fff;
  width:100%;
  display:flex;
  height:30px;
  line-height:30px;
  justify-content: center;
}