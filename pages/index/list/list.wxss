/* pages/home/details.wxss */
.scroll_view{
  width: 100%;
  height: 130px;
  margin-top:30px;
  overflow: hidden;
  padding: 2px;
  white-space: nowrap;
}
.cate_scroll_x{
  width:auto;
  /* height:150px; */
  /* padding: 5px; */
  overflow:hidden;
}
.list_box{
  width:130px;
  height: 130px;
  display:inline-block;
  text-align: center;
  position:relative;
  margin-right:5px
}
.cate_img{
  width:130px;
  height:auto;
}
.search_input{
  color:#000;
  font-weight:100;
  font-size:15px;
}
.cate_img_text{
  position:absolute;
  left:10px;
  bottom:10px;
  /* background-color:#60606099; */
  border-radius:2px;
  padding:2px 5px;
  color:#fff;
}
.list{
  /* box-shadow:2px 2px 2px #00000045; */
  padding:5px;
}
.img_item {
  width: 100%;
  display: inline-block;
  vertical-align: top;
  height:auto;
}
.content_list{
  height:100%;
}
/* 侧边栏样式 */
.page-slidebar {
    height: 100%;
    width:60px;
    margin-top: 140px;
    position: fixed;
    background-color:white;
    z-index: 0;
}
.wc{
  font-size:12px;
  text-align:center;
  margin:10px 0px;
}
.condition{
  width: 100%;
  /* height:100%; */
  position: fixed;
  font-weight: bold;
  line-height: 30px;
  text-align: center;
  color:#000;
  z-index:999;
  background-color:rgba(0,0,0,0.4);
}
.condition_info{
  position:relative;
  /* height:30px; */
  text-align:left;
  width:100%;
  background-color:rgb(255,255,255);
}
.condition_infos{
  margin-bottom: 30px;
  padding: 5px;
  max-height:400px;
  overflow:scroll;
}
.condition_bottom{
  height:30px;
  background-color:rgb(240,240,240);
  width:100%;
  position:absolute;
  bottom:0px;
  text-align:center;
}
.color_view{
  display:inline-block;
  width:40px;
  height:40px;
  margin:0px 10px 0px 10px;
  border-radius:50%;
  box-sizing:border-box;
}
.condition_text{
  display:inline-block;
  font-size:11px;
  /* font-weight:100; */
  margin:0px 2px 0px 0px;
  background-color:rgb(240,240,240);
  /* padding:0 5px; */
  width:23%;
  text-align:center;
}
.condition_btn1{
  width:49%;
  display: block;
  text-align:center;
  color:#fff;
  background-color:#000;
  height:40px;
  line-height:40px;
}
.condition_btn{
  width:49%;
  display: block;
  text-align:center;
  background-color:rgb(240,240,240);
  height:40px;
  line-height:40px;
}
.cate_text{
  font-weight:100;
  display:flex;
  align-items:center;
}
.progress{
  background-color:black; 
  position:fixed;
  z-index:9999;
}
/* 清楚浮动 */
.clearfix:after { 
  display:block; 
  height : 0; 
  clear : both; 
  content : '' 
}