.login_btn{
  width:50%;
  height:40px;
  margin-top: 40px;
  line-height: 40px;
  color:#000;
  background-color:rgb(240,240,240);
  border-radius: 0px;
}
.login_btn2{
 width:50%;
  height:40px;
  margin-top: 10px;
  line-height: 40px;
  color:#000;
  background-color:rgb(240,240,240);
  border-radius: 0px;
}
.login_none{
  text-align:center;
}
.keep_view{
  width: 49vw;
  display: inline-block;
}
.keep_name{
  font-size: 20px;
  font-weight: bold;
  display: block;
  padding: 0px 5px;
  height:30px;
}
.cate_view{
  margin: 10px 0px;
  width: 100%;
  height:30px;
  line-height: 30px;
  text-align: left;
  color:#000;
  font-weight: bold;
}
.addkeep{
  bottom:40px;
  position:fixed;
  width:50px;
  color:#fff;
  background-color:#000;
  height:50px;
  border-radius:50%;
  right:40px;
  font-size:50px;
  line-height:50px;
  padding:0px;
  z-index:9999;
}
.gallery1{
  width:49vw;
  height:49vw;
  padding: 5px 5px 5px 0px;
  display:flex;
  flex-wrap: wrap;
  align-content: flex-start;
  overflow:hidden;
}
.gallery1::after{
  content: "";
  flex-grow: 2;
  flex-shrink: 1;
}
.button{
  width: 100px;
  font-size:15px;
  margin:5px 0px;
  padding:0;
  color:#000;
  background-color:#ffffff;
  line-height:inherit;
  border-radius:0;
  border:none;
  display:flex;
  justify-content:left;
  align-items:center;
}
button::after {
 border: none
}
/* 清楚浮动 */
.clearfix:after { 
  display:block; 
  height : 0; 
  clear : both; 
  content : '' 
}